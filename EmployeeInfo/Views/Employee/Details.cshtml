@model EmployeeInfo.Models.Employee

<div class="container">
    <div class="p-4 my-5" style="color:#FFFFFF;background-color:#009688;margin-top:0px">
        <h1 style="text-align:center">@Model.Name</h1>
    </div>
    <div class="row text-secondary font-weight-bold my-3" style="font-size:20px">
        <div class="col-3">Employee ID</div>
        <div class="col-9">@Model.EmployeeId</div>
    </div>
    <hr />
    <div class="row text-secondary font-weight-bold my-3" style="font-size:20px">
        <div class="col-3">Employee Name</div>
        <div class="col-9">@Model.Name</div>
    </div>
    <hr />
    <div class="row text-secondary font-weight-bold my-3" style="font-size:20px">
        <div class="col-3">Contact Number</div>
        <div class="col-9">@Model.ContactNumber</div>
    </div>
    <hr />
    <div class="row text-secondary font-weight-bold my-3" style="font-size:20px">
        <div class="col-3">Address</div>
        <div class="col-9">@Model.Address</div>
    </div>
    <hr />
    <div class="row text-secondary font-weight-bold my-3" style="font-size:20px">
        <div class="col-3">Experience Details</div>
        <div class="col-9">@Model.Note</div>
    </div>
    <hr />
    <div class="row text-secondary font-weight-bold my-3" style="font-size:20px">
        <div class="col-3">Salary</div>
        <div class="col-9">@Model.Salary</div>
    </div>
    <hr />
    <div class="row justify-content-center my-5">
        <div class="w-75 btn-group" role="group">

            <a asp-controller="Employee" asp-action="Edit"
               asp-route-Id="@Model.EmployeeId" class="btn btn-info w-50 mx-2" >
                <i class="fas fa-edit"></i>
            </a>
        <a class="btn btn-danger w-50 mx-2" asp-controller="Employee" asp-action="Delete" asp-route-Id="@Model.EmployeeId" >
            <i class="fas fa-trash-alt"></i>
        </a>
            <a onclick="window.history.back()" class="btn btn-success w-50  mx-2" id="delete">
                <i class="fas fa-sign-out-alt"></i>&nbsp;Back
            </a>
        </div>
    </div>
</div>
