@model EmployeeInfo.Models.Employee

<form method="post" asp-action="DeletePost">
    <input type="hidden" asp-for="EmployeeId" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Employee Details</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmployeeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmployeeId" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ContactNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ContactNumber" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Note"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Note" disabled class="form-control" rows="4"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Salary"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Salary" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100"
                                   value="Delete" />
                        </div>

                        <div class="col">
                            <a onclick="window.history.back()" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i>&nbsp;Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>




